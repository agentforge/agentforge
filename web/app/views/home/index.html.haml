.row
  .col-2.main-control
    .control-panel.container
      %h2 Control Panel
      -# Rest of your existing code

      -# .form-check
      -#   %input.form-check-input{type: "checkbox", id: "checkbox1"}/
      -#   %label.form-check-label{for: "checkbox1"} Checkbox 1
      -# .form-check
      -#   %input.form-check-input{type: "checkbox", id: "checkbox2"}/
      -#   %label.form-check-label{for: "checkbox2"} Checkbox 2
      .form-group
        %button#reset-history.btn.btn-primary{type: "button"} Reset History
      .form-group
        %h5 Name
        %input#name-input.form-control{type: "text", value: "User"}
      .form-group
        %h5 Robot Name
        %input#robot-name-input.form-control{type: "text", value: "Robot"}
      = video_tag("", :controls => false, :autobuffer => true, :size => "256x256", :id => "hero-video")
      .custom-control.custom-checkbox
        %input.custom-control-input{type: "checkbox", id: "tts", checked: "checked"}/
        %label.custom-control-label{for: "tts"} TTS
      .custom-control.custom-checkbox
        %input.custom-control-input{type: "checkbox", id: "lipsync", checked: "checked"}/
        %label.custom-control-label{for: "lipsync"} LipSync
      .custom-control.custom-checkbox
        %input.custom-control-input{type: "checkbox", id: "streaming"}/
        %label.custom-control-label{for: "streaming"} Streaming

      .slider-container
        %label{for: "max_new_tokens"} Max New Tokens
        %input.custom-range{type: "range", id: "max_new_tokens", min: "1", max: "2048"}/
        %span#max_new_tokens_value
          
      .dropdown-container
        %label Avatars
        %select.custom-select#avatar-dropdown
          - @avatars.each do |avatar| 
            %option{value: avatar}= avatar
          
      .dropdown-container
        %label{for: "model-config"} Model Config
        %select.custom-select#model-config
          - @model_configs.each do |config|
            %option{value: config}= config

      .dropdown-container
        %label{for: "model"} Model
        %select.custom-select#model
          - @models.each do |model|
            %option{value: model}= model

  .col-8.interaction
    %div{style:"margin-top:32px;width:100%;height:100%;"}
      %div{style:"padding-left:18%;padding-right:18%;"}
        .chat-widget
          %ul.no-bullets.chat-history{style:"max-height: 500px;overflow: scroll;"}
          #chat-input.row
            //%input#user-input.col.form-control{type: "text"}
            .col-9
              %textarea#user-input.form-control{rows: "4", style:"width:100%"}
            .col-3
              %button#send-message.btn.btn-primary.btn-lg
                %i.fa.fa-rocket

  .col-2.secondary-control
    .container
      -# %h1 Thoughts
      %ul.thought-history{style:"max-height: 500px;overflow: scroll;font-size: 10px"}

