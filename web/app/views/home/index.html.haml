.row
  .col-2.main-control
    .control-panel.container
      %h2 Control Panel
      -# .form-check
      -#   %input.form-check-input{type: "checkbox", id: "checkbox1"}/
      -#   %label.form-check-label{for: "checkbox1"} Checkbox 1
      -# .form-check
      -#   %input.form-check-input{type: "checkbox", id: "checkbox2"}/
      -#   %label.form-check-label{for: "checkbox2"} Checkbox 2
      .form-group
        %button#reset-history.btn.btn-primary{type: "button"} Reset History
      .form-group
        %h5 Name
        %input#name-input.form-control
      .form-group
        %h5 Robot Name
        %input#robot-name-input.form-control  
      = video_tag("/videos/loop.mp4", :controls => false, :autobuffer => true, :size => "256x256", :id => "hero-video")
      .form-group
        %h5 Context
        %textarea#context-input.form-control{rows: "3"}

  .col-8.interaction
    %div{style:"margin-top:32px;width:100%;height:100%;"}
      %div{style:"padding-left:18%;padding-right:18%;"}
        %p
          The current time is
          = Time.now
        .chat-widget
          %ul.no-bullets.chat-history{style:"max-height: 500px;overflow: scroll;"}
          #chat-input.row
            //%input#user-input.col.form-control{type: "text"}
            .col-9
              %textarea#user-input.form-control{rows: "3", style:"width:100%"}
            .col-3
              %button#send-message.btn.btn-primary.btn-lg
                %i.fa.fa-rocket

  .col-2.secondary-control
    .container
      -# %h1 Thoughts
      %ul.thought-history{style:"max-height: 500px;overflow: scroll;font-size: 10px"}